@model HelloDoc.DAL.ViewModels.ReviewAgreementvm

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review AgreeMent</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css">
    @*************** toastr cdn ************@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/custom.js"></script>
</head>

<body class="mainbg">
    <partial name="_Notification" />
    <div style="margin: 50px; padding: 50px 50px 50px 50px;">
        <div class="row mt-3 justify-content-center">
            <div class="col-md-12">
                <h6>
                    To provide best medical service, we cannot determine the cost right away. If you agree to our services, so we will provide
                    care and follow-up until all care is completed. So with this points, if you like us to provide care to you click on "Agree"
                    and we'll get started immediately, if you do not agree simply click "Cancel".
                </h6>
            </div>
        </div>
        <div class="row mt-5">

            <div class="col">
                <div class="row justify-content-end">
                    <div class="col mt-2 d-flex justify-content-center ">
                        <a type="button" asp-controller="PatientSide" asp-action="ReviewAgree" asp-route-pid="@Model.RequestId" class="btn btn-mode" style="background-color:#1a7f36; border-color:#1a7f36;color:#fff;display:inline-flex;border-radius:5px;">I Agree</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="row justify-content-end">
                    <div class="col mt-2 d-flex justify-content-center ">
                        <button class="btn btn-mode" data-bs-toggle="modal" data-bs-target="#exampleModalCenter" style="border-color:#c62127;background-color:#c62127; color:#fff;display:inline-flex;border-radius:5px;">Cancel</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Cancle Confirmation</h1>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post">
                    <div class="modal-body mt-2">
                        <input type="text" asp-for="@Model.RequestId" hidden />
                        <div class="text-info">
                            <h5>
                                @Model.PatientName,
                            </h5>

                        </div>
                        <div class="form-floating mt-2">
                            <textarea class="form-control" asp-for="@Model.CancellationNotes" id="cancelnote" placeholder="Enter Cancelation Note" style="height:80px;"></textarea>
                            <label for="cancelnote">Please provide a brief explanation for your Cancelation</label>
                            <span class="text-danger" asp-validation-for="@Model.CancellationNotes"></span>

                        </div>
                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-info me-3" asp-controller="PatientSide" asp-action="CancelAgree" asp-route-pid="@Model.RequestId">Confirm</button>
                            <button type="button" data-bs-dismiss="modal" class="btn btn-outline-info btn-back">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <partial name="_ValidationScriptsPartial" />
</body>
