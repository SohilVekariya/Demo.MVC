@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit request</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @*************** toastr cdn ************@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <script src="~/js/custom.js"></script>

    @**************** jquery cdn *************@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>

<body onload="checkMode()" style="background-color:transparent">
    <partial name="_Notification" />
    <div class="container-fluid">
        <div class="row">
            <div class="d-flex justify-content-between align-items-center">
                <div class="ms-3">
                    <img src="~/images/MainLogo.png" alt="" style="height: 7vh;">
                </div>
                <button class="btn btn-outline-info border border-2 border-info fs-5 px-2 py-1 rounded fw-bolder me-2 position-absolute modelogin"
                        id="dark-mode-btn">
                    <i id="moon" class="bi bi-moon"></i>
                    <i id="sun" class="bi bi-sun d-none"></i>
                </button>
            </div>
        </div>
        <div class="row  justify-content-center" style="position: relative;">
            <div class="col-11 col-xl-5 ">
                <div class="row mainbox" style="height: 500px;">
                    <div class="mt-5 heading d-flex justify-content-between">
                        <div class="ps-4">
                            <h3>I am a...</h3>
                        </div>

                        <div>
                            <div>
                                <a asp-action="LandingPage" asp-controller="PatientSide" class="alllinks btn" style="border-radius: 10%; height: 35px; border:2px solid #00bce7; background-color: transparent;"> <i class="bi bi-caret-left"></i> Back </a>
                            </div>
                        </div>
                    </div>

                    <div class="mt-2">
                        <a asp-action="PatientReq" asp-controller="PatientSide" type="submit" class="btn btn-info reqbut" style=" background-color: rgb(138, 43, 226,0.15);color:rgb(138, 43, 226);">PATIENT</a>
                    </div>
                    <div class="mt-2">
                        <a asp-action="FamilyfriendReq" asp-controller="PatientSide" class="btn btn-info reqbut" style=" background-color: rgb(0, 162, 255,0.15);color: rgb(0, 162, 255);">FAMILY/FRIEND</a>
                    </div>
                    <div class="mt-2">
                        <a asp-action="ConciergeReq" asp-controller="PatientSide" class="btn btn-info reqbut" style="background-color: rgb(0, 128, 0,0.15);color:  rgb(0, 128, 0);">CONCIERGE</a>
                    </div>
                    <div class="mt-2">
                        <a asp-action="BussinessReq" asp-controller="PatientSide" class="btn btn-info reqbut" style="background-color: rgb(71, 29, 71,0.15);color: purple;">BUSINESS PARTENERS</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <footer class="text-center text-lg-start position-absolute xyz" style="width:100%;background-color: rgb(27, 24, 24); right: 0;bottom: 0; color: aliceblue;">
            <!-- Copyright -->
            <div class="p-3 text-end">
                Terms of Conditions &nbsp; &nbsp;| &nbsp; &nbsp;   Privacy Policy
            </div>
            <!-- Copyright -->
        </footer>
    </div>

    <script src="~/js/dark-theme.js" asp-append-version="true"></script>


</body>
</html>