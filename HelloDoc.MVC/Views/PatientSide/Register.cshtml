@model HelloDoc.DAL.ViewModels.Registervm
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/js/custom.js">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @*************** toastr cdn ************@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>

<body onload="checkMode()" style="background-color:transparent">
    <partial name="_Notification" />

    <div>
        <button class="btn btn-outline-info border border-2 border-info fs-5 px-2 py-1 rounded fw-bolder me-2 position-absolute modelogin"
                id="dark-mode-btn">
            <i id="moon" class="bi bi-moon"></i>
            <i id="sun" class="bi bi-sun d-none"></i>
        </button>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-center ">
            <div class="">
                <div class="row mainbox">
                    <div class="col-12 text-center mt-1 logo-div">
                        <img src="~/images/hallodoc-logo.svg" height="400" width="600" class="logoimg" alt="" style="border-radius: 5px;">
                    </div>
                    <div class="col-12 d-flex flex-column justify-content-center align-items-center">
                        <form class="col-xl-5 col-11" method="post" asp-route-id="@Model.RequestId">
                            <input type="text" asp-for="@Model.RequestId" hidden />

                            <h3 class="mt-2 mb-5">Register Your Account</h3>
                            <div class="form-group  input-boxes">
                                <div class="form-floating ">
                                    <input type="email" asp-for="Email" class="form-control input-fields" id="floatingInput1" placeholder="name@example.com">
                                    <label for="floatingInput">Email</label>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="icons">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                            </div>
                            <div class="form-group mt-3 input-boxes">
                                <div class="form-floating mb-3">
                                    <input type="password" asp-for="Password" class="form-control input-fields" id="floatingInput2" placeholder="password" autocomplete="on">
                                    <label for="floatingInput">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <div class="eye-icon position-absolute top-0 end-0 mx-3 my-2">
                                        <i class="bi bi-eye-slash fs-4 text-muted mt-1 common-cursor-pointer" id="togglePassword4" onclick="showPassword()" ></i>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3 input-boxes">
                                <div class="form-floating mb-3">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control input-fields" id="floatingInput3" placeholder="conform password" autocomplete="on">
                                    <label for="floatingInput">Conform Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <div class="eye-icon position-absolute top-0 end-0 mx-3 my-2">
                                        <i class="bi bi-eye-slash fs-4 text-muted mt-1 common-cursor-pointer" id="togglePassword5" onclick="showConfirmPassword()" ></i>
                                    </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn-info userbuttons">Create</button>
                        </form>
                    </div>
                    <div class="col-12 d-flex flex-column  justify-content-end mb-1">
                        <footer class="text-center text-lg-start">
                            <!-- Copyright -->
                            <div class="text-center p-3">
                                Terms of Conditions |
                                <a class="text-body" href="https://mdbootstrap.com/">Privacy Policy</a>
                            </div>
                            <!-- Copyright -->
                        </footer>
                    </div>
                </div>
            </div>
            <partial name="_validationscriptspartial" />
            <script src="~/js/dark-theme.js" asp-append-version="true"></script>
            <script>
                function showPassword() {

                    const togglePassword = document.querySelector("#togglePassword4");
                    const password = document.querySelector("#floatingInput2");

                    const type = password.getAttribute("type") === "password" ? "text" : "password";
                    password.setAttribute("type", type);

                    document.getElementById("togglePassword4").classList.toggle('bi-eye');
                }
                function showConfirmPassword() {

                    const togglePassword = document.querySelector("#togglePassword5");
                    const password = document.querySelector("#floatingInput3");

                    const type = password.getAttribute("type") === "password" ? "text" : "password";
                    password.setAttribute("type", type);

                    document.getElementById("togglePassword5").classList.toggle('bi-eye');
                }
            </script>
</body>
</html>
