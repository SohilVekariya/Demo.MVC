@model HelloDoc.DAL.ViewModels.PatientReqData;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>patient</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.1.0/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css">
    <link rel="stylesheet" href="~/css/style.css">
    @*************** toastr cdn ************@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="~/js/custom.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>

<body onload="checkMode()" style="background-color:transparent">
    <partial name="_Notification" />
    <div class="d-flex justify-content-between align-items-center">
        <div class="ms-3">
            <img src="~/images/MainLogo.png" alt="" style="height: 7vh;">
        </div>
        <button class="btn btn-outline-info border border-2 border-info fs-5 px-2 py-1 rounded fw-bolder me-2 position-absolute modelogin"
                id="dark-mode-btn">
            <i id="moon" class="bi bi-moon"></i>
            <i id="sun" class="bi bi-sun d-none"></i>
        </button>
    </div>
    <div class="row" style="justify-content: center;">
        <div class=" col-xl-5 col-xl-6 col-lg-5 col-sm-8 col-md-10 col-10 heading position-relative mt-3 mb-5">

            <div class="fw-bold" style="font-size:22.48px">
                <p>Submit Information</p>
            </div>
            <div class="position-absolute backboxp" style="top:0; right: 1%;">
                <div>
                    <a asp-action="Dashboard" asp-controller="PatientSide" class="btn alllinks" style="border-radius: 10%; height: 35px; border:2px solid #00bce7; background-color: transparent;"> <i class="bi bi-caret-left"></i> Back </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3" style="justify-content: center;">
        <div class="col-xl-5 col-xl-6 col-lg-5 col-sm-8 col-md-10 col-10 sec-row-col">
            <form class="shadow p-5 requestForm" style="display: flex;flex-direction: column;justify-content: space-around;" asp-action="SubmitForMe" method="post" enctype="multipart/form-data" id="myform">
                <div class="row">
                    <div class="mt-2">
                        <h5>Patient Information</h5>
                    </div>
                    <div class="col-xl-12">
                        <div class="form-floating  mb-3">
                            <textarea class="form-control" asp-for="Notes" placeholder="Leave a comment here" id="floatingTextarea2"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Enter Brief Details of Symptoms (Optional)</label>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="FirstName" class="form-control" id="floating1" placeholder="First Name">
                            <label for="floating1">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="LastName" class="form-control" id="floating2" placeholder="Last Name">
                            <label for="floating2">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            @{
                                string max = DateTime.Now.ToString("yyyy-MM-dd");
                            }
                            <input type="date" max="@max" class="form-control" asp-for="BirthDate" id="floating3">
                            <label for="floating3">Date of Birth</label>
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div>
                        <h5 class="mt-3">Patient Contact Information</h3>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3 ">
                            <input type="email" id="email" asp-for="Email" class="form-control" id="floating4" placeholder="name@example.com">
                            <label for="floating4">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            <input id="phone" asp-for="PhoneNumber" type="tel" class="form-control" placeholder="PhoneNumber" />
                            <label for="phone">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div>
                        <h5 class="mt-3">Patient Location</h3>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="Street" class="form-control" id="floatingInput7" placeholder="Street">
                            <label for="floatingInput7">Street</label>
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="City" class="form-control" id="floatingInput8" placeholder="City">
                            <label for="floatingInput8">City</label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="State" class="form-control" id="floatingInput9" placeholder="State">
                            <label for="floatingInput9">State</label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="ZipCode" class="form-control" id="floatingInput10" placeholder="Zip Code">
                            <label for="floatingInput10">Zip Code</label>
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-xl-6 mt-2">
                        <div class="form-floating mb-3">
                            <input type="text" asp-for="Address" class="form-control" id="floatingInput11" placeholder="Address">
                            <label for="floatingInput11">Room # / Suite (Optional)</label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-xl-6 form-floating mt-2">
                        <select id="regionId" class="form-select p-0 ps-2 mb-2 regionDropdown" aria-label="Default select example" asp-for="RegionId">
                            <option selected disabled>Select Region</option>
                            @foreach (var obj in Model.Regions)
                            {
                                <option value="@obj.RegionId">
                                    @obj.Name
                                </option>
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="RegionId"></span>
                    </div>
                </div>
                <div class="row">
                    <div>
                        <h5 class="mt-3"> (Optional) Upload Photo or Document</h3>
                    </div>

                    <div class="col-12 mt-2">
                        <div class="col input-group mb-3">
                            <input type="file" asp-for="Upload" class="form-control" id="inputGroupFile02" hidden onchange="updateFileName(this)">
                            <input id="upload-name" asp-for="FileName" class="form-control inputFile" type="text" value="" aria-label="readonly input example" readonly>
                            <label class="input-group-text btn btn-info pt-3 text-dark" for="inputGroupFile02">Upload</label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12 mt-2 mb-3">
                        <div class="d-flex justify-content-end">
                            <button class="me-4" type="submit" class="text-white" style="border-radius: 10%; height: 35px;width: 80px; border-color:#00bce7; background-color: #00bce7;">
                                Submit
                            </button>
                            <button type="reset" class="alllinks" style="border-radius: 10%; height: 35px;width:80px ; border-color:#00bce7; background-color: transparent;">
                                Cancel
                            </button>
                            <button type="submit" class="border-0 bg-transparent" id="savebtn">
                                @* <a class="btn  btn-info text-white p-2 rounded fw-semibold me-2 text-capitalize">
                                Submit
                                </a> *@
                            </button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <footer class="text-center text-lg-start w-100 foot position-absolute bg-transparent" style="background-color: rgb(27, 24, 24);  right: 0;  color: aliceblue;">
        <!-- Copyright -->
        <div class="p-3 text-end">
            Terms of Conditions &nbsp; &nbsp;| &nbsp; &nbsp;   Privacy Policy
        </div>
        <!-- Copyright -->
    </footer>

    <partial name="_validationscriptspartial" />
    <script src="~/js/dark-theme.js" asp-append-version="true"></script>

    <script>
        $(".requestForm input, .requestForm textarea, .requestForm select, .requestForm select").addClass("bg-transparent")

        function updateFileName(input) {
            var fileName = input.files[0].name;
            document.getElementById('upload-name').value = fileName;
        }
    </script>
</body>
</html>

