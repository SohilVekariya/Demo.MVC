@model HelloDoc.DAL.ViewModels.AdminDashvm


<div class="row d-flex justify-content-center mt-5" id="viewNotesView">
    <div class="col-md-8 col-11">
        <form action="" class="p-4 " method="post" id="viewNotesForm" onsubmit="UpdateViewNotes(@Model.viewNotesModel.RequestId)">
            <input type="text" asp-for="@Model.viewNotesModel.RequestId" hidden/>
            <input type="text" asp-for="@Model.StatusForName"  hidden/>
            <input type="text" asp-for="@Model.CallId"  hidden/>


            <div class="d-flex justify-content-between">
                <div class="">
                    <h5>
                        Notes
                    </h5>
                </div> 
                @if(Model.CallId == 3)
                {
                    <a class="btn btn-outline-info border border-2 border-info fs-5 px-2 py-1 rounded fw-bolder me-2" onclick="GetProviderDashboard()">
                        <i class="bi bi-caret-left"></i> Back
                    </a>
                }
                else if (Model.CallId == 2)
                {
                    <a class="btn btn-outline-info border border-2 border-info fs-5 px-2 py-1 rounded fw-bolder me-2" onclick="ViewCaseRecords(@Model.StatusForName,@Model.viewNotesModel.RequestId,@Model.CallId)">
                        <i class="bi bi-caret-left"></i> Back
                    </a>
                }
                else
                {
                    <a class="btn btn-outline-info border border-2 border-info fs-5 px-2 py-1 rounded fw-bolder me-2" onclick="GetDashboard(@Model.StatusForName)">
                        <i class="bi bi-caret-left"></i> Back
                    </a>
                    
                }
            </div>

            <div class="row">

                <div class="col-xl-6 mt-4">
                    <div class="d-flex form-control mb-3 border-0 shadow h-auto" id="floatingTextarea21"
                         >
                        <i class="bi bi-arrow-left-right d-flex align-items-center h5"></i>
                        <div class="ms-3 overflow-y-scroll notesblock">
                            <h5>Transfer Notes</h5>
                            <ul>
                                @foreach (var obj in Model.viewNotesModel.TransferNotes)
                                {
                                    <li>@obj</li>
                                }
                            </ul>
                            @* <p>@Model.viewNotesModel.TransferNotes</p> *@
                        </div>
                    </div>
                </div>

                <div class="col-xl-6 mt-4 ">
                    <div class="d-flex form-control mb-3 border-0 shadow h-auto" id="floatingTextarea22">
                        <i class="fa fa-user-md d-flex align-items-center" style="font-size:28px;"></i>
                        <div class="ms-3 overflow-y-scroll notesblock">
                            <h5>Physician Notes</h5>
                            <p>@Model.viewNotesModel.PhysicianNotes</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 mt-4">
                    <div class="d-flex form-control mb-3 border-0 shadow h-auto" id="floatingTextarea23">
                        <div class="d-flex align-items-center">
                            <img src="~/images/admin.png" height="16px" class="d-flex align-items-center" style="height:23px"></img>
                        </div>
                        <div class="ms-3 overflow-y-scroll notesblock">
                            <h5>Admin Notes</h5>
                            <p>@Model.viewNotesModel.AdminNotes</p>
                        </div>
                    </div>

                </div>
                <div class="col-xl-6 mt-4 d-none border-0 shadow">
                    <div class="d-flex form-control mb-3 input-disable h-auto" id="floatingTextarea24">
                        <i class="bi bi-arrow-left-right d-flex align-items-center h5"></i>
                        <div class="ms-3 notesblock">
                            <h5>Admin Cancellation Notes</h5>
                            <p> -</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 mt-4 d-none border-0 shadow">
                    <div class="d-flex form-control mb-3 input-disable h-auto" id="floatingTextarea25">
                        <i class="bi bi-arrow-left-right d-flex align-items-center h5"></i>
                        <div class="ms-3 notesblock">
                            <h5>Physician Cancellation Notes</h5>
                            <p> -</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 mt-4 d-none border-0 shadow">
                    <div class="d-flex form-control mb-3 input-disable h-auto" id="floatingTextarea26">
                        <i class="bi bi-arrow-left-right d-flex align-items-center h5"></i>
                        <div class="ms-3 notesblock">
                            <h5>Patient Cancellation Notes</h5>
                            <p> -</p>
                        </div>
                    </div>
                </div>
               
                @if(Model.CallId ==3)
                {
                    <div class="col-xl-12 mt-4">
                        <div class="form-floating">
                            <textarea class="form-control mb-3 shadow border-0" placeholder="Leave a comment here" asp-for="@Model.viewNotesModel.PhysicianNotes" id="floatingTextarea28"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea28">Additional Notes by Physician</label>
                            <span class="text-danger" asp-validation-for="@Model.viewNotesModel.PhysicianNotes"></span>
                        </div>
                    </div>
                }
                 else
                {
                    <div class="col-xl-12 mt-4">
                        <div class="form-floating">
                            <textarea class="form-control mb-3 shadow border-0" rows="3" placeholder="Leave a comment here" asp-for="@Model.viewNotesModel.AdminNotes" id="floatingTextarea27"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea27">Additional Notes by Admin</label>
                            <span class="text-danger" asp-validation-for="@Model.viewNotesModel.AdminNotes"></span>
                        </div>
                    </div>
                }

                <div class="col-12 mt-2 mb-3">
                    <div class="d-flex justify-content-end">
                        <button type="submit" style="color:azure; border-radius: 10%; height: 35px; border-color:#00bce7; background-color: #00bce7;">
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>


           
           
        </form>
    </div>
</div>
<partial name="_validationscriptspartial" />

