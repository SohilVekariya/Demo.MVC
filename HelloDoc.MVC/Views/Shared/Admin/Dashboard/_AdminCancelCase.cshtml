@* cancelcase model *@


@model HelloDoc.DAL.ViewModels.AdminDashvm

<div class="modal fade" id="cancelModalId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Cancellation</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="cancelCaseForm" method="post" onsubmit="CancelCase(@Model.cancelCaseModal.RequestId)">
                    <div class="modal-body">
                    <input type="text" asp-for="@Model.cancelCaseModal.RequestId" hidden/>
                    <input type="text" asp-for="@Model.StatusForName" id="statusForName" hidden />
                        <div class="text-secondary">
                            Patient Name : <span class="text-info"> @Model.cancelCaseModal.Name</span>
                        </div>

                        <div class="mt-3">
                            <select class="form-select form-select-md  h-100 text-secondary" aria-label="meadiam select example" asp-for="@Model.cancelCaseModal.CasetagId">
                            <option selected disabled>Reasons For Cancellation</option>
                            @foreach(var obj in Model.caseTags.ToList())
                            {
                                <option value="@obj.CaseTagId">@obj.Name</option>
                            }                          
                            </select>                         
                        </div>
                       <span class="text-danger" asp-validation-for="@Model.cancelCaseModal.CasetagId"></span>

                        <div class="mt-4 mb-3">
                            <div class="form-floating">
                                <textarea class="form-control  h-100" placeholder="Leave a comment here" id="floatingTextarea2" asp-for="@Model.cancelCaseModal.AditionalNotes"></textarea>
                                <label for="floatingTextarea2" class="text-secondary">Provide Additional Notes</label>
                            <span class="text-danger" asp-validation-for="@Model.cancelCaseModal.AditionalNotes"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-info text-white me-2">Confirm</button>
                            <button type="button" class="btn  text-info border-info" data-bs-dismiss="modal">Cancel</button>
                        </div>

                    </div>
                </form>

        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />